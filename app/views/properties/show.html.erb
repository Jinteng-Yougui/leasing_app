<p id="notice"><%= notice %></p>
<h1>閲覧<h1>

<p>
  <strong>物件名:</strong>
  <%= @property.property %>
</p>

<p>
  <strong>賃料:</strong>
  <%= @property.rent %>円
</p>

<p>
  <strong>住所:</strong>
  <%= @property.address %>
</p>

<p>
  <strong>築年数:</strong>
  <%= @property.building_age %>年
</p>

<p>
  <strong>備考:</strong>
  <%= @property.remarks %>
</p>

<hr>
<% number = 0 %>
<% @property.nearest_stations.each do |nearest_station| %>
  # <% if nearest_station.errors.any? %>
  <h3><label for="title">最寄り駅<% number +=1 %></label></h3>
    <p>
      <strong>路線名</strong>
      <%= nearest_station.name_of_railway %>
    </p>
    <p>
      <strong>駅名</strong>
      <%= nearest_station.station_name %>
    </p>
    <p>
      <strong>徒歩分数</strong>
      <%= nearest_station.how_many_minuites_walk %>分
    </p>
  <% end %>

